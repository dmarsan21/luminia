---
// src/components/ProductCard.astro
interface Props {
  imageUrl: string;
  name: string;
  aroma: string;
  price: string;
  isNew?: boolean; // Propiedad opcional para resaltar productos
}

const { imageUrl, name, aroma, price, isNew = false } = Astro.props;
---

<article
  class="group relative flex flex-col bg-white rounded-2xl border border-stone-100 overflow-hidden transition-all duration-500 hover:-translate-y-1 hover:shadow-2xl hover:shadow-stone-200/50"
>
  {
    isNew && (
      <span class="absolute top-4 left-4 z-10 bg-white/90 backdrop-blur-md px-3 py-1 rounded-full text-[10px] font-bold tracking-widest uppercase text-amber-800 border border-amber-100 shadow-sm">
        Nuevo
      </span>
    )
  }

  <div class="relative aspect-4/5 overflow-hidden bg-stone-100">
    <img
      src={imageUrl}
      alt={`Vela artesanal ${name}`}
      class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-110"
      loading="lazy"
    />
    <div
      class="absolute inset-0 bg-stone-900/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
    >
    </div>
  </div>

  <div class="flex flex-col flex-1 p-6 text-center">
    <header>
      <span
        class="text-[10px] uppercase tracking-[0.2em] text-stone-400 font-medium"
      >
        {aroma}
      </span>
      <h3
        class="text-xl md:text-2xl font-serif text-stone-800 mt-2 group-hover:text-amber-900 transition-colors"
      >
        {name}
      </h3>
    </header>

    <div
      class="mt-auto pt-4 flex items-center justify-between border-t border-stone-50"
    >
      <p class="text-lg font-medium text-stone-600">
        {price}
      </p>

      <button
        class="text-xs uppercase tracking-tighter font-semibold text-amber-700 hover:text-amber-900 transition-colors"
      >
        Detalles +
      </button>
    </div>
  </div>
</article>
