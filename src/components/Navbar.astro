---
// src/components/Navbar.astro
const navLinks = [
  { href: "/tienda", text: "Colecciones" },
  { href: "/nosotros", text: "Nuestra Historia" },
  { href: "/contacto", text: "Contacto" },
];
---

<nav
  class="sticky top-0 z-50 w-full bg-stone-50/90 backdrop-blur-md border-b border-stone-100"
>
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex items-center justify-between h-20 md:h-24">
      <div class="hidden md:flex items-center space-x-10 flex-1">
        {
          navLinks.slice(0, 2).map((link) => (
            <a
              href={link.href}
              class="text-[11px] uppercase tracking-[0.2em] text-stone-500 hover:text-stone-900 transition-colors duration-300 font-medium"
            >
              {link.text}
            </a>
          ))
        }
      </div>

      <div class="shrink-0">
        <a
          href="/"
          class="text-2xl md:text-3xl font-serif tracking-[0.4em] text-stone-900"
        >
          LUMINA
        </a>
      </div>

      <div class="flex items-center justify-end space-x-4 md:space-x-10 flex-1">
        <a
          href="/contacto"
          class="hidden md:block text-[11px] uppercase tracking-[0.2em] text-stone-500 hover:text-stone-900 transition-colors duration-300 font-medium"
        >
          Contacto
        </a>

        <button class="relative p-2" aria-label="Carrito">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5 text-stone-800"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.2"
              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
          </svg>
        </button>

        <button id="menu-button" class="md:hidden text-stone-800 p-2 z-60">
          <svg
            id="menu-icon"
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              id="path1"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M4 8h16M4 16h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="fixed inset-0 bg-stone-50 z-50 flex flex-col items-center justify-center space-y-8 opacity-0 pointer-events-none transition-all duration-500"
  >
    {
      navLinks.map((link) => (
        <a
          href={link.href}
          class="text-2xl font-serif text-stone-800 tracking-widest"
        >
          {link.text}
        </a>
      ))
    }
    <div class="pt-8 border-t border-stone-200 w-24"></div>
    <p class="text-[10px] uppercase tracking-[0.3em] text-stone-400">
      Esencia & Luz
    </p>
  </div>
</nav>

<script>
  const menuButton = document.getElementById("menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("path1");

  let isMenuOpen = false;

  menuButton?.addEventListener("click", () => {
    isMenuOpen = !isMenuOpen;

    if (isMenuOpen) {
      mobileMenu?.classList.remove("opacity-0", "pointer-events-none");
      mobileMenu?.classList.add("opacity-100", "pointer-events-all");
      menuIcon?.setAttribute("d", "M6 18L18 6M6 6l12 12"); // Cambia a "X"
      document.body.style.overflow = "hidden"; // Evita scroll
    } else {
      mobileMenu?.classList.add("opacity-0", "pointer-events-none");
      mobileMenu?.classList.remove("opacity-100", "pointer-events-all");
      menuIcon?.setAttribute("d", "M4 8h16M4 16h16"); // Vuelve a hamburguesa
      document.body.style.overflow = "";
    }
  });
</script>
