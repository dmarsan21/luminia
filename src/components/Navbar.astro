---
import { Icon } from "astro-icon/components";

// src/components/Navbar.astro
const navLinks = [
  { href: "/catalogo-velas", text: "Colecciones" },
  { href: "/nosotros", text: "Nuestra Historia" },
  { href: "/contacto", text: "Contacto" },
];
---

<nav id="main-nav" class="nav-container">
  <div class="max-w-7xl mx-auto px-6 h-full flex items-center">
    <div class="hidden md:flex flex-1 items-center space-x-10">
      {
        navLinks.slice(0, 2).map((link) => (
          <a href={link.href} class="desktop-link">
            {link.text}
          </a>
        ))
      }
    </div>

    <div class="flex-none z-110">
      <a href="/" class="logo-text">LUMINA</a>
    </div>

    <div
      class="flex-1 flex items-center justify-end space-x-4 md:space-x-8 z-110"
    >
      <a href="/contacto" class="hidden md:block desktop-link">Contacto</a>

      <button class="relative icon-button" aria-label="Carrito">
        <a href="/contacto" class="icon-button" aria-label="Contacto">
          <div class="relative inline-block">
            <Icon name="mdi:shopping" class="w-6 h-6" />
            <span
              class="absolute top-0 right-0 translate-x-1/2 -translate-y-1/2 bg-rose-500 text-white text-xs rounded-full px-1"
            >
              %
            </span>
          </div>
        </a>
      </button>

      <button id="menu-button" class="md:hidden p-2" aria-label="Abrir menú">
        <div class="hamburger">
          <span class="line"></span>
          <span class="line"></span>
        </div>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="mobile-overlay">
    <div class="menu-content">
      {
        navLinks.map((link) => (
          <a href={link.href} class="mobile-link">
            {link.text}
          </a>
        ))
      }
      <div class="divider"></div>
      <p class="tagline">Esencia & Luz</p>
    </div>
  </div>
</nav>

<style>
  .nav-container {
    position: sticky;
    top: 0;
    width: 100%;
    height: 80px;
    background-color: #fafaf9; /* Color sólido forzado */
    border-bottom: 1px solid #e7e5e4;
    z-index: 100;
  }

  .logo-text {
    font-family: serif;
    font-size: 1.25rem;
    md-font-size: 1.8rem;
    letter-spacing: 0.4em;
    color: #1c1917;
    text-decoration: none;
    display: block;
  }

  .icon-button {
    color: #1c1917;
    padding: 8px;
    transition: opacity 0.3s;
  }

  /* ESTADO DEL MENÚ MÓVIL */
  .mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #fafaf9 !important; /* Fondo crema sólido */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 105;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease-in-out;
  }

  :global(body.is-menu-open) .mobile-overlay {
    opacity: 1 !important;
    visibility: visible !important;
  }

  .menu-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .mobile-link {
    font-family: serif;
    font-size: 1.25rem;
    color: #1c1917;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    text-decoration: none;
  }

  .divider {
    width: 40px;
    height: 1px;
    background-color: #d6d3d1;
    margin: 0.5rem 0;
  }

  .tagline {
    font-size: 9px;
    text-transform: uppercase;
    letter-spacing: 0.4em;
    color: #a8a29e;
  }

  /* HAMBURGER */
  .hamburger {
    width: 22px;
    height: 12px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .line {
    width: 100%;
    height: 1px;
    background-color: #1c1917;
    transition: all 0.3s ease;
  }

  :global(body.is-menu-open) .line:nth-child(1) {
    transform: translateY(5.5px) rotate(45deg);
  }
  :global(body.is-menu-open) .line:nth-child(2) {
    transform: translateY(-5.5px) rotate(-45deg);
  }

  /* DESKTOP LINKS */
  .desktop-link {
    position: relative;
    font-size: 0.875rem; /* 14px */
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #78716c;
    text-decoration: none;
    transition: color 0.3s;
  }
  .desktop-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0%;
    height: 2px;
    background-color: #1c1917;
    transition: width 0.3s;
  }
  .desktop-link:hover {
    color: #1c1917;
  }
  .desktop-link:hover::after {
    width: 100%;
  }

  /* Bloquear scroll */
  :global(body.is-menu-open) {
    overflow: hidden;
  }
</style>

<script>
  function setupMenu() {
    const btn = document.getElementById("menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (btn && mobileMenu) {
      // Definimos el cierre del menú
      const closeMenu = () => {
        document.body.classList.remove("is-menu-open");
      };

      // Corregimos el error tipando el evento 'e' como MouseEvent
      const toggleMenu = (e: MouseEvent) => {
        e.stopPropagation();
        document.body.classList.toggle("is-menu-open");
      };

      // Limpiar y asignar evento al botón
      btn.removeEventListener("click", toggleMenu as any);
      btn.addEventListener("click", toggleMenu as any);

      // Cerrar al hacer clic en links
      const links = mobileMenu.querySelectorAll("a");
      links.forEach((link) => {
        link.addEventListener("click", closeMenu);
      });

      // Cerrar al hacer clic en el fondo
      mobileMenu.addEventListener("click", (e: MouseEvent) => {
        if (e.target === mobileMenu) {
          closeMenu();
        }
      });
    }
  }

  setupMenu();
  document.addEventListener("astro:after-swap", setupMenu);
</script>
