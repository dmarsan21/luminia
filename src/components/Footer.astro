---
import { Icon } from "astro-icon/components";

type Link = { href: string; text: string };
type SocialLink = { label: string; href: string; icon: string };

const quickLinks: Link[] = [
  { href: "/tienda", text: "Velas" },
  { href: "/cuidado", text: "Cuidado de la vela" },
  { href: "/faq", text: "Preguntas Frecuentes" },
];

const socialLinks: SocialLink[] = [
  { label: "Facebook", href: "#", icon: "mdi:facebook" },
  { label: "Instagram", href: "#", icon: "mdi:instagram" },
  { label: "WhatsApp", href: "#", icon: "mdi:whatsapp" },
];
---

<footer class="bg-stone-50 border-t border-stone-200 pt-2">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Logo + descripción -->
      <div class="lg:col-span-2 space-y-4">
        <a
          href="/"
          class="text-3xl font-serif tracking-[0.3em] text-stone-900 block uppercase"
        >
          LUMINA
        </a>
        <p class="text-stone-500 max-w-sm leading-relaxed font-light text-sm">
          Creamos santuarios de paz a través de fragancias artesanales. Cada
          vela es una invitación a la pausa y el bienestar.
        </p>
      </div>

      <!-- Links rápidos -->
      <div>
        <h4
          class="text-xs uppercase tracking-[0.2em] font-bold text-stone-900 mb-4"
        >
          Explorar
        </h4>
        <ul class="space-y-3">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-stone-500 hover:text-yellow-600 transition-colors duration-300 font-light"
                >
                  {link.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Redes sociales -->
      <div>
        <h4
          class="text-xs uppercase tracking-[0.2em] font-bold text-stone-900 mb-4"
        >
          Conecta
        </h4>
        <div class="flex items-center space-x-5">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                aria-label={social.label}
                class="text-stone-500 hover:text-yellow-600 transition-colors"
              >
                <Icon name={social.icon} class="w-5 h-5" />
              </a>
            ))
          }
        </div>
        <p
          class="mt-4 text-[10px] text-stone-400 uppercase tracking-[0.2em] font-medium italic"
        >
          #IluminaTuMomento
        </p>
      </div>
    </div>
  </div>

  <!-- Footer inferior -->
  <div class="border-t border-stone-100 py-6 bg-stone-100/50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-[10px] uppercase tracking-widest text-stone-400">
          &copy; {new Date().getFullYear()} LUMINA. Esencia & Luz.
        </p>
        <div
          class="flex items-center gap-4 text-[10px] uppercase tracking-[0.15em] text-stone-400"
        >
          <p>
            Hospedado por <a
              href="#"
              class="text-stone-600 hover:text-yellow-600 transition-colors font-semibold"
              >Rock Hosting Plus</a
            >
          </p>
          <span class="w-1 h-1 bg-stone-300 rounded-full"></span>
          <p>
            Diseño <a
              href="#"
              class="text-stone-600 hover:text-yellow-600 transition-colors font-semibold"
              >Devmarsan</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>
